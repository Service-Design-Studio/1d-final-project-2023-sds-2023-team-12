<div class="container_fix">
  <div class="centralize-form">
    <h1 class="sign_up_header">Forgot your password?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class:"signup-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"signup-field" %>
      </div>

      <div class="actions d-flex justify-content-center sign_up_cover">
        <%= f.submit "Send Reset Instructions", class:"signup-button" %>
      </div>
    <% end %>
    </div>
</div>

<%= render "devise/shared/links" %>
