<h1 class="log_in_header">Log in</h1>

<div class="centralize-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "login-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "login-field" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "login-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "login-field" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="remember-me-label">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class:"remember-me-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "login-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" =%>
</div>
