<div class="container_fix">

<h1 class="edit_user_header">Edit User</h1>

<div class="centralize-form">
 <!--<h2>Edit <%= resource_name.to_s.humanize %></h2>-->

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :full_name, class: "edit_field_label" %><br />
      <%= f.text_field :full_name, autofocus: true, autocomplete: "full_name", class: "edit_field" %>
    </div>

    <div class="field">
      <%= f.label :mobile_phone, class: "edit_field_label" %><br />
      <%= f.number_field :mobile_phone, autofocus: true, autocomplete: "mobile_phone", class: "edit_field" %>
    </div>

    <div class="field">
      <%= f.label :email, class: "edit_field_label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "edit_field"  %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :new_password, class: "edit_field_label" %><br />
      <%= f.password_field :new_password, autocomplete: "new-password", class: "edit_field" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: "edit_field_label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "edit_field"  %>
    </div>

    <div class="field">
      <%= f.label :current_password, class: "edit_field_label" %><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "edit_field"  %><br/>
    </div>

    <div class="actions update_button_cover">
      <%= f.submit "Save Changes", class: "update_button save-changes-button-margin" %>
      <div style: align-items: center></div>
    </div>
  <% end %>


<div>
<%= button_to "Delete account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "delete_account_button" %></div>
