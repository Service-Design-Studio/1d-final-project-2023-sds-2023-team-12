<%= form_with(model: post) do |form|%>
  <% if post.errors.any? %>
    <div style="color: red">

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
<div class="container_fix_advanced animate__animated animate__fadeInUp">
<%# <%= params.inspect%> 
<% if params[:controller]=="posts" and params[:action]=="edit" %>
  <h1 class="report_header_breadcrumb">Edit Case</h1>
<% else %>
  <h1 class="report_header_breadcrumb">Report A Case</h1>
<%end%>

  <div class="row">

    <div class="column column_left post_image_new">
      <div class="new_post_image">
      <div class="edit_post_image">
        <%= image_tag @post.image_url if @post.image%>
      </div>
      </div>
    </div>

    <div class="column column_right">
      <p class="form_headers post_item"> Basic Information </p>
      <div class="post_item">
        <%= form.label :full_name, style: "display: block", class:"report-label mb-1" %>
        <%= form.text_field :full_name, class:"report-field" %>
      </div>

      <div class="post_item">
        <%= form.label :age, style: "display: block", class:"report-label mb-1" %>
        <%= form.number_field :age, class:"report-field" %>
      </div>


      <div class="post_item">
          <%= form.label :gender, style: "display: block", class: "report-label mb-1" %>
          <%= form.select :gender, options_for_select(['Male', 'Female']), {}, class: "report-field" %>
      </div>

      <p class="form_headers post_item"> Last Seen </p>

      <div class="post_item">
        <%= form.label :location, style: "display: block", class:"report-label mb-1" %>
        <%= form.text_field :location, class:"report-field" %>
      </div>

      <div class="post_item">
        <form action="/action_page.php">
          <%= form.label :missing_time, style: "display: block", class:"TimeMissing-label report-label mb-1" %>
          <%= form.datetime_local_field :missing_time, class:"report-field" %>

             
        </form>
      </div>


      <p class="form_headers post_item"> Description </p>
      <p class="subtext post_item">The fields below have auto-translation, feel free to write in your language.<p>
      

      <div class="post_item">
        <%= form.label :description, style: "display: block", class:"report-label mb-1" %>
        <%= form.text_area  :description, class:"report-field " %>
      </div>

      <div class="post_item">
        <%= form.label :special_note, style: "display: block", class:"report-label mb-1" %>
        <%= form.text_area :special_note, class:"report-field" %>
      </div>

      <div hidden>
        <%= form.label :user_id, style: "display: block", class:"report-label mb-1"  %>
        <%= form.number_field :user_id, value: current_user.id, class:"report-field" %>
      </div>

      <p class="form_headers post_item"> Other </p>

      <%# <div class="post_item">
        <%= form.label :image, style: "display: block", class: "report-label mb-1" %>
        <%# <%= image_tag form.object.image_url if form.object.cached_image_data %>
        <%# <%= form.hidden_field :image, value: form.object.cached_image_data %> 
        <%# <%= form.file_field :image %> 
      <%# </div>  %>

       <%# Gcloud storage %>
      <div class="post_item">
          <%= form.label :Image, style: "display: block", class: "report-label mb-1" %>
          <%= form.file_field :avatar %>
      </div>  

      <div class="post_item">
        <%= form.label :reward, style: "display: block", class:"report-label mb-1 add_details_reward" %>
        <%= form.number_field :reward, class:"report-field" %>
      </div>

     

    </div>
  </div>

  <div class="middle-button"> 
    <%= form.submit class: "login-button create-post-button update-post-button" %>
    <%# <% link_to "Update Post", show_post_detail_path(post), class: "login_button"%> 
  </div>


  <%# <%= link_to "Create Post", new_user_post_path, class: "button_submit_post login-button", data: {turbo_method: :post}%> 

<% end %>
</div>