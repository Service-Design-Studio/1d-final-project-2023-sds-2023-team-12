<%# for my cases page %>
<% if params[:user_id]%>
  <div class="width_ninety_for_profile row">
    <div class="col-3 profile-content">
      <div class="container-account-details">
        <div class="account-details-header">Account Details</div>

        <div class="container-details-content">
          <div class="detail-item">
            <h2 class ="account-details-label mb-1">Full Name</h2>

          </div>

          <div class= "detail-item">
            <h2 class="account-details-label">Email</h2>
          </div>

          <div class="detail-item">
            <h2 class="account-details-label">Phone Number</h2>
          </div>

          <div class="detail-item">
            <a href="<%=edit_user_registration_path({user_id: current_user.id})%>">
              <button class = "edit-profile-button"><b>Edit Profile</b></button>
            </a>
          </div>

        </div>
      </div>
        <%# ayu u can add profile content here!  %>
        <%# the bottom left button should link to the page that is currently named Profile in the nav bar  %>
    </div>

    <div class="for_all_cases col-9">
      <h1 class="title_index_post">My Cases</h1>

        <div id="posts" class="project_showcase row">

          <% @posts.each do |post| %>
            <%= render post %>
          <% end %>

      </div>
    </div>
  </div>

<%# for browse cases page %>
<% else %>
  

  <div class="width_ninety_for_filter row">

    <div class="for_filter col-3">
    <div class="filter_content">

    


    <%# SEARCH FILTERING %>
    <%= form_tag(posts_path, method: :get) do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search..." %>
      <%= submit_tag "Search" %>
    <% end %>
    
    <%# AGE + GENDER FILTERING %>
    <%= form_tag(posts_path, method: :get) do %>
      <h5>Age Category</h5>
      <% Post::AGE_CATEGORIES.each do |category, _range| %>
        <div class="filter-checkbox">
          <%= check_box_tag "age_categories[]", category , @selected_age_categories.include?(category.to_s) %>
          <%= label_tag category.to_s, category.capitalize %><br>
        </div>
      <% end %>
      <h5>Gender</h5>
        <div class="filter-checkbox">
          <% selected_genders = @selected_genders || [] %>
          <%= check_box_tag "genders[]", "Male", @selected_genders&.include?("Male") %>
          <%= label_tag "Male", "Male" %><br>
          <%= check_box_tag "genders[]", "Female", @selected_genders&.include?("Female") %>
          <%= label_tag "Female", "Female" %><br>
        </div>
      


      <%# SORTING  %>
      <h5>Sort By</h5>
      <% sort_options= [['Most Recently Posted', 'recently_posted'],['Most Recently Missing', 'recently_missing'], ['Alphabetical Order', 'alphabetical'], ['Highest Rewards', 'highest_rewards']] %>
      <%= select_tag :sort_by, options_for_select(sort_options, @sort_by), prompt: 'Sort By' %>

      <br>
      <%= submit_tag "Filter" %>
    <% end %>

    </div>

  
    </div>

    <div class="for_all_cases col-9">
      <h1 class="title_index_post">Cases</h1>

      <div id="posts" class="project_showcase row">
          <% @posts.each do |post| %>
              <%= render post %>
          <% end %>
      </div>
    </div>
  </div>

<%end%>

